{
  // Версия схемы конфигурации, помогает редакторам с автодополнением
  "version": "0.2",

  // Язык по умолчанию для проверки
  "language": "en,ru",

  // --- Словари ---
  // Список словарей для использования. 'en_US' и 'ru' - стандартные.
  // Можно добавлять специализированные (softwareTerms, companies, etc.)
  "dictionaries": [
    "en_us",
    "ru",
    "softwareTerms",
    "cpp",
    "c",
    "project-words"
  ],

  // --- Пользовательский словарь проекта ---
  // Определяем новый словарь прямо в этом файле
  "dictionaryDefinitions": [
    {
      // Имя нашего словаря
      "name": "project-words",
      // Путь к файлу, где будут храниться слова, специфичные для этого проекта
      "path": "./.vscode/project-words.txt",
      // Говорим cspell, что нужно добавлять новые слова именно в этот файл
      "addWords": true
    }
  ],

  // --- Слова, которые нужно игнорировать всегда ---
  // (альтернатива добавлению в файл словаря)
  "words": [
    "Viacheslav",
    "Mezentsev",
    "endregion",
    "cplusplus",
    "noexcept",
    "noinline",
    "noreturn",
    "nullptr"
  ],

  // --- Паттерны для игнорирования ---
  // Регулярные выражения для игнорирования определенных последовательностей
  "ignoreRegExpList": [
    // Игнорировать шестнадцатеричные числа (0xdeadbeef)
    "0x[0-9a-fA-F]+",
    // Игнорировать слова в верхнем регистре с подчеркиваниями (макросы)
    "\\b[0-9A-Z_]+\\b"
  ],

  // --- Файлы и папки для игнорирования ---
  // Glob-паттерны для файлов, которые не нужно проверять
  "ignorePaths": [
    "build/**",
    ".git/**",
    "modules/**",
    "*.bin",
    "*.hex",
    "*.map",
    "*.elf",
    "*.log"
  ]
}
